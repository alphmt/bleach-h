<cleaner id="amule">
  <label>aMule</label>
  <description>File transfer client</description>
  <option id="logs">
    <label>Logs</label>
    <description>Delete the logs</description>
    <action type="file">~/.aMule/logfile</action>
    <action type="file">~/.aMule/logfile.bak</action>
    <action type="file">$APPDATA\aMule\logfile</action>
    <action type="file">$APPDATA\aMule\logfile.bak</action>
  </option>
  <option id="tmp">
    <label>Temporary files</label>
    <description>Delete the temporary files</description>
    <action type="children" directories="false">~/.aMule/Temp/</action>
    <action type="children" directories="false">$APPDATA\aMule\Temp\</action>
  </option>
</cleaner>
