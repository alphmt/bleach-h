<cleaner id="yahoo_messenger" os="windows">
  <label>Yahoo! Messenger</label>
  <description>Chat client</description>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the cache</description>
    <action type="children" directories="false">$PROGRAMFILES\Yahoo!\Messenger\Cache\</action>
  </option>
  <option id="chat_logs">
    <label>Chat logs</label>
    <description>Delete the chat logs</description>
    <action type="glob">$PROGRAMFILES\Yahoo!\Messenger\Profiles\*\Archive\Messages\*\*.dat</action>
  </option>
  <option id="logs">
    <label>Logs</label>
    <description>Delete the logs</description>
    <action type="children" directories="false">$PROGRAMFILES\Yahoo!\Messenger\logs\</action>
    <action type="file">$USERPROFILE\Local Settings\Application Data\Yahoo\Y!Msgr\merlin.log</action>
    <action type="file">$USERPROFILE\Local Settings\Application Data\Yahoo\Y!Msgr\merlin.log.old</action>
  </option>
</cleaner>
