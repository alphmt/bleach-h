<cleaner id="google_chrome">
  <label>Google Chrome</label>
  <description>Web browser</description>
  <running type="exe">chrome.exe</running>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the web cache, which reduces time to display revisited pages</description>
    <action type="children" directories="false">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Cache\</action>
    <action type="children" directories="false">~/.config/google-chrome/Default/Cache/</action>
  </option>
  <option id="cookies">
    <label>Cookies</label>
    <description>Delete cookies, which contain information such as web site preferences, authentication, and tracking identification</description>
    <action type="file">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Cookies</action>
    <action type="file">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Extension Cookies</action>
    <action type="file">~/.config/google-chrome/Default/Cookies</action>
    <action type="file">~/.config/google-chrome/Default/Extension Cookies</action>
  </option>
  <option id="history">
    <label>History</label>
    <description>Delete the history, which includes bookmarks, downloads, and visited sites</description>
    <action type="file">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Archived History</action>
    <action type="file">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\History</action>
    <action type="glob">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\History Index ????-??</action>
    <action type="glob">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\History Index ????-??-journal</action>
    <action type="file">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\History-journal</action>
    <action type="file">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Visited Links</action>
    <action type="file">~/.config/google-chrome/Default/Archived History</action>
    <action type="file">~/.config/google-chrome/Default/Archived History-journal</action>
    <action type="glob">~/.config/google-chrome/Default/History Index ????-??</action>
    <action type="glob">~/.config/google-chrome/Default/History Index ????-??-journal</action>
    <action type="file">~/.config/google-chrome/Default/History-journal</action>
    <action type="file">~/.config/google-chrome/Default/Visited Links</action>
  </option>
  <option id="session">
    <label>Session</label>
    <description>Delete the current and last sessions</description>
    <action type="file">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Current Session</action>
    <action type="file">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Current Tabs</action>
    <action type="file">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Last Session</action>
    <action type="file">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Last Tabs</action>
    <action type="file">~/.config/google-chrome/Default/Current Session</action>
    <action type="file">~/.config/google-chrome/Default/Current Tabs</action>
    <action type="file">~/.config/google-chrome/Default/Last Session</action>
    <action type="file">~/.config/google-chrome/Default/Last Tabs</action>
  </option>
  <option id="vacuum">
    <label>Vacuum</label>
    <description>Clean database fragmentation to reduce space and improve speed without removing any data</description>
    <action type="sqlite.vacuum">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Safe Browsing Bloom</action>
    <action type="sqlite.vacuum">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Archived History</action>
    <action type="sqlite.vacuum">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Cookies</action>
    <action type="sqlite.vacuum">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Extension Cookies</action>
    <action type="sqlite.vacuum">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\History Index ????-??</action>
    <action type="sqlite.vacuum">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\History</action>
    <action type="sqlite.vacuum">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Thumbnails</action>
    <action type="sqlite.vacuum">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Web Data</action>
    <action type="sqlite.vacuum">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Plugin Data\Google Gears\localserver.db</action>
    <action type="sqlite.vacuum">$USERPROFILE\Local Settings\Application Data\Google\Chrome\User Data\Default\Plugin Data\Google Gears\permissions.db</action>
  </option>
</cleaner>
