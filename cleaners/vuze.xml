<cleaners>
  <cleaner id="vuze">
    <label>Vuze</label>
    <option id="cache">
      <label>Cache</label>
      <action type="file">~/.azureus/ipfilter.cache</action>
    </option>
    <option id="logs">
      <label>Logs</label>
      <action type="children" directories="true">~/.azureus/logs/</action>
      <action type="file">~/.azureus/update.log</action>
      <action type="file">~/.azureus/tracker.log</action>
    </option>
    <option id="tmp">
      <label>Temporary files</label>
      <action type="children" directories="false">~/.azureus/tmp/</action>
    </option>
  </cleaner>
</cleaners>
