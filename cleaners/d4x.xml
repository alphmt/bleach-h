  <label>d4x</label>
  <description>Downloader for X</description>
  <option id="history">
    <label>History</label>
    <description>Delete the history and cookies</description>
    <action type="glob">~/.ntrc_2/history*</action>
    <action type="file">~/.ntrc_2/cookies.txt</action>
  </option>
</cleaner>
