<cleaner id="epiphany" os="linux">
  <label>Epiphany</label>
  <description>Web browser</description>
  <running type="exe">epiphany</running>
  <running type="pathname">~/.gnome2/epiphany/mozilla/epiphany/.parentlock</running>
  <running type="pathname">~/.gnome2/epiphany/mozilla/epiphany/lock</running>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the web cache, which reduces time to display revisited pages</description>
    <action type="file">~/.gnome2/epiphany/ephy-favicon-cache.xml</action>
    <action type="children" directories="false">~/.gnome2/epiphany/favicon_cache/</action>
    <action type="children" directories="false">~/.gnome2/epiphany/mozilla/epiphany/Cache/</action>
  </option>
  <option id="cookies">
    <label>Cookies</label>
    <description>Delete cookies, which contain information such as web site prefereneces, authentication, and tracking identification</description>
    <action type="file">~/.gnome2/epiphany/mozilla/epiphany/cookies.txt</action>
    <action type="file">~/.gnome2/epiphany/mozilla/epiphany/cookies.sqlite</action>
    <action type="file">~/.gnome2/epiphany/mozilla/epiphany/cookies.sqlite-journal</action>
  </option>
  <option id="passwords">
    <label>Passwords</label>
    <description>A database of usernames and passwords as well as a list of sites that should not store passwords</description>
    <action type="file">~/.gnome2/epiphany/mozilla/epiphany/signons3.txt</action>
  </option>
  <option id="places">
    <label>Places</label>
    <description>A database of URLs including bookmarks, favicons, and a history of visited web sites</description>
    <warning>Deleting Places deletes bookmarks.</warning>
    <action type="file">~/.gnome2/epiphany/mozilla/epiphany/places.sqlite</action>
    <action type="file">~/.gnome2/epiphany/mozilla/epiphany/places.sqlite-journal</action>
    <action type="file">~/.gnome2/epiphany/ephy-history.xml</action>
  </option>
</cleaner>
