<cleaner id="chrome" os="windows">
  <label>Chrome</label>
  <description>Web browser</description>
  <option id="cache">
    <label>Cache</label>
    <description>Delete the web cache, which reduces time to display revisited pages</description>
    <action type="children" directories="false">~\Local Settings\Application Data\Google\Chrome\User Data\Default\Cache\</action>
  </option>
  <option id="cookies">
    <label>Cookies</label>
    <description>Delete cookies, which contain information such as web site prefereneces, authentication, and tracking identification</description>
    <action type="file">~\Local Settings\Application Data\Google\Chrome\User Data\Default\Cookies</action>
  </option>
  <option id="history">
    <label>History</label>
    <description>Delete the history, which includes bookmarks, downloads, and visited sites</description>
    <action type="file">~\Local Settings\Application Data\Google\Chrome\User Data\Default\Archived History</action>
    <action type="glob">~\Local Settings\Application Data\Google\Chrome\User Data\Default\History Index ????-??</action>
  </option>
  <option id="current_session">
    <label>Current session</label>
    <description>Delete the current session</description>
    <action type="file">~\Local Settings\Application Data\Google\Chrome\User Data\Default\Current Session</action>
  </option>
</cleaner>
