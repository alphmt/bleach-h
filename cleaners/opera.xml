<cleaner id="opera">
  <label>Opera</label>
  <description>Web browser</description>
  <option id="cache">
    <label>Cache</label>
    <description>Web cache reduces time to display revisited pages</description>
    <action type="children" directories="false">~/.opera/cache4/</action>
    <action type="children" directories="false">~/.opera/opcache/</action>
    <action type="children" directories="false">~\Local Settings\Application Data\Opera\Opera\profile\cache4\</action>
    <action type="children" directories="false">~\Local Settings\Application Data\Opera\Opera\profile\opcache\</action>
  </option>
  <option id="cookies">
    <label>Cookies</label>
    <description>Delete cookies, which contain information such as web site prefereneces, authentication, and tracking identification</description>
    <action type="file">~/.opera/cookies4.dat</action>
    <action type="file">~/Application Data\Opera\Opera\profile\cookies4.dat</action>
  </option>
</cleaner>
