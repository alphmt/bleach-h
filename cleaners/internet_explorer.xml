<cleaner id="internet_explorer" os="windows">
  <label>Internet Explorer</label>
  <description>Web browser</description>
  <option id="cookies">
    <label>Cookies</label>
    <description>Delete cookies, which contain information such as web site prefereneces, authentication, and tracking identification</description>
    <action type="children" directories="false">$USERPROFILE\Cookies\</action>
    <action type="children" directories="false">$APPDATA\Microsoft\Windows\Cookies\</action>
  </option>
  <option id="temporary_files">
    <label>Temporary files</label>
    <description>Web cache reduces time to display revisited pages</description>
    <action type="children" directories="false">$USERPROFILE\Local Settings\Temporary Internet Files\</action>
    <action type="children" directories="false">$USERPROFILE\AppData\Local\Microsoft\Windows\Temporary Internet Files\</action>
  </option>
  <option id="history">
    <label>History</label>
    <description>List of visited web pages</description>
    <action type="children" directories="false">$USERPROFILE\Local Settings\History\</action>
    <action type="children" directories="false">$USERPROFILE\AppData\Local\Microsoft\Windows\History\</action>
    <!-- "How to clear the History entries in Internet Explorer", http://support.microsoft.com/kb/157729 -->
    <action type="winreg">HKCU\Software\Microsoft\Internet Explorer\TypedURLs</action>
  </option>
</cleaner>
