<cleaner id="xchat">
  <label>XChat</label>
  <description>Chat client</description>
  <option id="logs">
    <label>Chat logs</label>
    <description>Delete the chat logs</description>
    <action type="children" directories="true">~/.xchat2/scrollback/</action>
    <action type="glob">~/.xchat2/logs/*log</action>
    <!-- ~/.xchat2/logs/*log seen before XChat version 2.8.6.  Not present in XChat 2.4.0 Windows. -->
    <action type="glob">~/.xchat2/xchatlogs/*log</action>
    <!-- ~/.xchat2/xchatlogs/*log seen first in XChat version 2.8.6 -->
    <action type="children" directories="true">~\Application Data\X-Chat 2\scrollback\</action>
    <action type="glob">~\Application Data\X-Chat 2\xchatlogs\*log</action>
  </option>
</cleaner>
